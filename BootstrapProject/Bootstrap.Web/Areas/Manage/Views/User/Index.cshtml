                    //            layer.msg(result.Msg);
                    //            if (result.Success) {
                    //                obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                    //                layer.close(index);
                    //            }
                    //        }
                    //    });
                    //});
                } else if (layEvent === 'edit') { //编辑
                    //var roleFormDiv = layer.open({
                    //    title: "添加用户",
                    //    type: 2,
                    //    shadeClose: true,
                    //    closeBtn: 1,
                    //    maxmin: true,
                    //    area: ['400px', '300px'],
                    //    shade: 0.3,
                    //    content: "/Role/AddOrEidtRoleView?id=" + data.Id,
                    //    end: function () {
                    //        table.reload("roleList");
                    //    }
                    //});
                }
            });

            //打开添加窗口
            $("#addBtn").click(function () {
                var roleFormDiv = layer.open({
                    title: "添加角色",
                    type: 2,
                    shadeClose: true,
                    closeBtn: 1,
                    maxmin: true,
                    area: ['400px', '300px'],
                    shade: 0.3,
                    content: "/Role/AddOrEidtRoleView",
                    end: function () {
                        table.reload("roleList");
                    }
                });
            });
        });

    });
</script>